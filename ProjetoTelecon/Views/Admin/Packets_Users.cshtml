@{
    ViewData["Title"] = "Packets_Users";

   var id_data = ViewContext.RouteData.Values["id"];
}



<section class="admin servicos">
        <div class="container">
            <form class="row justify-content-between m-4" method="POST" action="/admin/Packets_Usersadd" enctype="multipart/form-data">
                <input type="hidden" name="UserId" class="form-control" value="@id_data">
                <div class="row">
                    <select class="form-select mb-4" aria-label="Default select example" name="PacketId">
                      <option selected>Selecione o pacote</option>
                      @foreach(var Packets in ViewBag.Packets)
                      {
                          <option value="@Packets.PacketId">@Packets.Name</option>
                      }
                    </select>
                </div>

                <div class="col-sm-12 form-group mb-4 text-end mt-5">
                    <a asp-controller="admin" asp-action="Users" asp-route-id="" class="btn btn-danger me-3">
                        <i class="bi bi-x-lg me-2"></i> Cancelar
                    </a>

                    <button type="submit" class="btn btn-success"><i class="bi bi-save me-2"></i> Salvar</button>
                </div>
            </form>
        </div>
</section>